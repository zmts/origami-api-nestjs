{
  "name": "origami-api-nestjs",
  "version": "1.0.0",
  "description": "origami-api-nestjs",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:all": "nest build api-main && nest build database && nest build modules",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:run": "nest build database && typeorm-ts-node-commonjs migration:run -d dist/libs/database/database/src/orm.config",
    "migration:rollback": "nest build database && typeorm migration:revert -d dist/libs/database/database/src/orm.config",
    "migration:create": "typeorm migration:create ./libs/database/src/migrations/migration-name"
  },
  "dependencies": {
    "@nestjs/common": "10.4.15",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.15",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.15",
    "@nestjs/typeorm": "10.0.2",
    "argon2": "0.41.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "passport-google-oauth20": "2.0.0",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "typeorm": "0.3.20",
    "uuid": "11.0.5"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.15",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.14",
    "@types/node": "20.3.1",
    "@types/passport-google-oauth20": "2.0.16",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.18.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-unicorn": "56.0.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "jest": "29.5.0",
    "prettier": "3.4.2",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@libs/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@libs/datalayer(|/.*)$": "<rootDir>/libs/datalayer/src/$1",
      "^@libs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@libs/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@libs/units(|/.*)$": "<rootDir>/libs/units/src/$1"
    }
  }
}
